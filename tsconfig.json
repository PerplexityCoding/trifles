{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "src",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "scripthost"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "jsx": "react",
    "jsxFactory": "h",
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
